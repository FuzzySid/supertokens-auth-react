{
    "compilerOptions": {
        "target": "ES2016",
        "strictNullChecks": true,
        "declaration": true,
        "module": "commonJS",
        "outDir": "build",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "sourceMap": false,
        "noImplicitThis": false,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "lib": ["ES2017"]
    },
    "include": ["ts/**/*"],
    "exclude": ["build"],
    "compileOnSave": true
}
